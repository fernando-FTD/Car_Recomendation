<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Gambar mobil -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_fav_car_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.App.RoundedCorners"
        tools:src="@drawable/toyota" />

    <TextView
        android:id="@+id/tv_fav_car_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_fav_car_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_fav_car_image"
        app:layout_constraintTop_toTopOf="@id/iv_fav_car_image"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Honda Brio RS CVT" />

    <TextView
        android:id="@+id/tv_fav_car_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/primary_blue"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_fav_car_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_fav_car_image"
        app:layout_constraintTop_toBottomOf="@id/tv_fav_car_name"
        tools:text="Rp. 750 Juta" />

</androidx.constraintlayout.widget.ConstraintLayout>
